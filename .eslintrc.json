{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": ["prettier", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "prettier"],
	"rules": {
		"prettier/prettier": "error"
	}
}
